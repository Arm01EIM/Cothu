  <script>
    // mobile nav
    document.addEventListener('click', (e)=>{
      const nav = document.getElementById('nav');
      if(nav.classList.contains('open')){
        const inside = nav.contains(e.target);
        if(!inside) nav.classList.remove('open');
      }
    });
    // tabs
    function switchTab(id, btn){
      document.querySelectorAll('[role=tabpanel]').forEach(el=>el.hidden=true);
      document.getElementById(id).hidden=false;
      document.querySelectorAll('.menu-tabs .tab').forEach(b=>b.classList.remove('active'));
      btn.classList.add('active');
    }
    // nutrition modal
    function openNutrition(name, highlights, cals){
      document.getElementById('nutriTitle').textContent = name + ' — Nutrition';
      document.getElementById('nutriHighlights').textContent = highlights;
      document.getElementById('nutriCals').textContent = cals;
      document.getElementById('nutriModal').showModal();
    }
    function closeNutrition(){
      document.getElementById('nutriModal').close();
    }
    // year
    document.getElementById('year').textContent = new Date().getFullYear();
  </script>
